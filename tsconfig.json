{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["node"],
    "skipLibCheck": true
  },

  "ts-node": {
    "files": true
  },
  "files": ["**/*.ts"],

  "lib": ["es2015"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
